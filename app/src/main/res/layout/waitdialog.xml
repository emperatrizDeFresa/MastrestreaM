<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/waitAnimation"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal"
              android:background="@drawable/roundedblack"
              android:orientation="vertical"
    >
<TextView
    android:id="@+id/nombre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="70dp"
    android:textColor="#333333"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center_horizontal|center_vertical"
    android:text="MasterstreaM"/>
    <LinearLayout

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:padding="5dp"
                  android:layout_marginBottom="25dp"
                  android:orientation="vertical">
    <com.crystal.crystalpreloaders.widgets.CrystalPreloader
        android:id="@+id/revolvingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:crs_pl_style="tornado_circle_3"
        app:crs_pl_size="medium"
        app:crs_pl_fg_color="#237fff"
        app:crs_pl_bg_color="#ffffff"


        />
</LinearLayout>
    </LinearLayout>