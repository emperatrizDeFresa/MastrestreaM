<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenDeporte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="fondot"
/>
        <LinearLayout
            android:id="@+id/global"
            android:transitionName="globalt"
        android:orientation="vertical"
            android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/gradiente"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="18dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"

            android:transitionName="gradientet"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="38dp"
                android:gravity="left|center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:transitionName="horat"
                android:text="TextView"/>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/texto"
            android:transitionName="textot"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="54dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:transitionName="nombret"
                android:text="TextView"/>
            <TextView
                android:id="@+id/competicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="38dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:fontFamily="sans-serif-condensed"
                android:transitionName="competiciont"
                android:text="TextView"/>
        </LinearLayout>
            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:layout_marginTop="50dp"
                />
        <LinearLayout
            android:id="@+id/empty"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:background="@drawable/link"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:layout_gravity="center"
            >





            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Small.Wave"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:SpinKit_Color="#999999" />

        </LinearLayout>

