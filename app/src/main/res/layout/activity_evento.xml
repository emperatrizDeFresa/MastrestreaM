<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenDeporte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="fondot"
/>
        <LinearLayout
            android:id="@+id/global"
            android:transitionName="globalt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/gradiente"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="18dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:background="@drawable/gradient"
            android:transitionName="gradientet"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="38dp"
                android:gravity="left|center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textStyle="bold"
                android:transitionName="horat"
                android:text="TextView"/>


            </LinearLayout>
        <LinearLayout
            android:id="@+id/texto"
            android:transitionName="textot"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="54dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:transitionName="nombret"
                android:text="TextView"/>
            <TextView
                android:id="@+id/competicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="38dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:fontFamily="sans-serif-condensed"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:transitionName="competiciont"
                android:text="TextView"/>
        </LinearLayout>
            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:layout_marginTop="40dp"
                />
            <!--<com.github.ybq.android.spinkit.SpinKitView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/spin_kit"-->
                <!--style="@style/SpinKitView.Circle"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="40dp"-->
                <!--android:visibility="gone"-->
                <!--app:SpinKit_Color="#ffffff" />-->
            <com.crystal.crystalpreloaders.widgets.CrystalPreloader
                android:id="@+id/spin_kit"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                app:crs_pl_style="expandable_balls"
                app:crs_pl_size="medium"
                app:crs_pl_fg_color="#fff"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                app:crs_pl_bg_color="#000"/>
        </LinearLayout>

</FrameLayout>



    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />
</LinearLayout>