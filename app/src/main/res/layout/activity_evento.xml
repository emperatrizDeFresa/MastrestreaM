<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenDeporte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="fondot"
/>
        <LinearLayout
            android:id="@+id/global"
            android:transitionName="globalt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/gradiente"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="18dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:background="@drawable/gradient"
            android:transitionName="gradientet"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="38dp"
                android:gravity="left|center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="0.1"
                android:textStyle="bold"
                android:transitionName="horat"
                android:text="TextView"/>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/texto"
            android:transitionName="textot"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="54dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:shadowColor="#000000"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="0.1"
                android:transitionName="nombret"
                android:text="TextView"/>
            <TextView
                android:id="@+id/competicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="38dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:fontFamily="sans-serif-condensed"
                android:shadowColor="#000000"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="0.1"
                android:transitionName="competiciont"
                android:text="TextView"/>
        </LinearLayout>
            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:layout_marginTop="50dp"
                />
        <LinearLayout
            android:id="@+id/empty"
            android:transitionName="textot"
            android:orientation="vertical"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/circulo"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            >
            <com.crystal.crystalpreloaders.widgets.CrystalPreloader
                android:id="@+id/spin_kit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:crs_pl_style="tornado_circle_3"
                app:crs_pl_size="small"
                app:crs_pl_fg_color="#bbb"
                app:crs_pl_bg_color="#000"/>
        </LinearLayout>
        </LinearLayout>

</FrameLayout>



    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />
</LinearLayout>